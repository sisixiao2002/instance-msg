.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 25px;
}
.top-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 1001;
  justify-content: space-between;
  height: 88rpx;
  width: 100%;
  background: #ffffff;
  padding-top: 25px;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.top-bar .top-bar-left {
  height: 100%;
  width: 88rpx;
  display: flex;
  align-items: center;
}
.top-bar .top-bar-left .back {
  margin-left: 32rpx;
  width: 36rpx;
  height: 36rpx;
}
.topicon {
  width: 100%;
  height: 150rpx;
  margin-top: 80rpx;
  margin-bottom: 68rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topicon .icon {
  width: 200rpx;
  height: 100rpx;
}
.main {
  margin-left: 80rpx;
  width: 100%;
}
.main .title {
  height: 80rpx;
  font-family: PingFangSC-Medium;
  font-size: 56rpx;
  color: #272832;
  font-weight: 500;
}
.main .inputs {
  padding-top: 8rpx;
}
.main .inputs .inputs-div {
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  width: calc(100vw - 120rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 80rpx;
}
.main .inputs .inputs-div input {
  height: 48rpx;
  font-size: 32rpx;
  color: #272832;
  line-height: 88rpx;
  font-weight: 500;
}
.main .inputs .inputs-div .employ, .main .inputs .inputs-div .invalid {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #FF5D5B;
  font-weight: 500;
}
.main .inputs .inputs-div .ok {
  width: 42rpx;
  height: 32rpx;
}
.main .inputs .inputs-div .look {
  width: 40rpx;
  height: 20rpx;
}
.submit {
  margin: 0 auto;
  margin-top: 120rpx;
  width: 520rpx;
  height: 96rpx;
  background: #FFE431;
  box-shadow: 0rpx 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  color: #272832;
  font-weight: 500;
}
.submit1 {
  margin: 0 auto;
  margin-top: 120rpx;
  width: 520rpx;
  height: 96rpx;
  background: rgba(39, 40, 50, 0.2);
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}


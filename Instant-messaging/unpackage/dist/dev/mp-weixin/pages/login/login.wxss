.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 25px;
}
.top-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 1001;
  justify-content: flex-end;
  height: 88rpx;
  width: 100%;
  background: uni-bg-color;
  padding-top: 25px;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.top-bar .top-bar-right {
  margin-right: 56rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
  letter-spacing: 0;
  font-weight: 500;
}
.topicon {
  width: 100%;
  height: 150rpx;
  margin-top: 80rpx;
  margin-bottom: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topicon .icon {
  width: 200rpx;
  height: 100rpx;
}
.main {
  margin-left: 58rpx;
  width: 100%;
}
.main .title {
  height: 80rpx;
  font-family: PingFangSC-Medium;
  font-size: 56rpx;
  color: #272832;
  letter-spacing: 0;
  font-weight: 500;
  margin-bottom: 14rpx;
}
.main .slogan {
  font-size: 40rpx;
  color: rgba(39, 40, 50, 0.6);
  font-weight: 400;
}
.main .inputs {
  padding-top: 8rpx;
}
.main .inputs input {
  padding-top: 40rpx;
  height: 48rpx;
  width: 636rpx;
  font-size: 32rpx;
  color: #272832;
  line-height: 88rpx;
  font-weight: 500;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.main .tips {
  font-size: 32rpx;
  color: #ff5d5b;
  line-height: 56rpx;
}
.submit {
  margin: 0 auto;
  margin-top: 120rpx;
  width: 520rpx;
  height: 96rpx;
  background: #FFE431;
  box-shadow: 0rpx 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  color: #272832;
  font-weight: 500;
}


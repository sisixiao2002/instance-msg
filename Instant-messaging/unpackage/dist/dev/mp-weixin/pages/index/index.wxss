.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 25px;
}
.top-bar {
  position: fixed;
  top: 0px;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 1001;
  justify-content: space-between;
  height: 88rpx;
  width: 100%;
  background: rgba(255, 255, 255, 0.96);
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  margin-bottom: 30rpx;
  padding-top: 25px;
}
.top-bar .top-bar-left {
  margin-left: 32rpx;
  margin-top: 10rpx;
}
.top-bar .top-bar-left ._img {
  width: 68rpx;
  height: 68rpx;
  border-radius: 68rpx;
}
.top-bar .top-bar-center {
  font-size: 700;
}
.top-bar .top-bar-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-right: 32rpx;
  margin-top: 10rpx;
}
.top-bar .top-bar-right .search {
  margin-right: 15rpx;
  width: 52rpx;
  height: 52rpx;
}
.top-bar .top-bar-right .add {
  width: 45rpx;
  height: 45rpx;
}
.main {
  margin-top: 100rpx;
  margin-bottom: 48rpx;
  width: 100%;
}
.main .friend {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 140rpx;
  width: 100%;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.1);
}
.main .friend:active {
  background-color: #f3f4f6;
}
.main .friend .friend-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 32rpx;
}
.main .friend .friend-left .friend-head {
  position: relative;
}
.main .friend .friend-left .friend-head .friend-picture {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background-color: #ffe431;
}
.main .friend .friend-left .friend-head .message-count {
  position: absolute;
  top: -18rpx;
  right: -20rpx;
  min-width: 24rpx;
  padding: 0 6rpx;
  height: 36rpx;
  border-radius: 18rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 36rpx;
  color: #fff;
  background: #ff5d5b;
}
.main .friend .friend-left .friend-content {
  margin-left: 32rpx;
}
.main .friend .friend-left .friend-content .friend-name {
  margin-bottom: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #272832;
  letter-spacing: -0.62rpx;
  font-weight: 400;
}
.main .friend .friend-left .friend-content .friend-message {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.main .friend .message-time {
  height: 140rpx;
  margin-top: 60rpx;
  margin-left: 20rpx;
  margin-right: 32rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
}


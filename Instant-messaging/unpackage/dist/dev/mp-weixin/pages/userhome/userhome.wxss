}
.info .head-portrait .sex-box .sex-img {
  margin: 16rpx;
  width: 32rpx;
  height: 32rpx;
}
.info .username {
  margin-top: 80rpx;
  font-size: 52rpx;
  color: #272832;
  font-weight: 400;
}
.info .nickname {
  margin-top: 20rpx;
  font-size: 28rpx;

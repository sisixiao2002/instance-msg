.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.info .head-portrait {
  box-shadow: 0px 36px 40px 0px rgba(39, 40, 50, 0.1);
  z-index: 10;
  margin-top: 60rpx;
  position: relative;
}
.info .head-portrait .head-img {
  width: 400rpx;
  height: 400rpx;
  border: 6rpx solid #FFFFFF;
  border-radius: 48rpx;
}
.info .head-portrait .sex-box {
  z-index: 11;

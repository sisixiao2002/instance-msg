  position: fixed;
  z-index: -2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bg .bg-bai {
  width: 100%;
  height: 100%;
}
.bg .bg-img {
  position: absolute;
  left: -10rpx;

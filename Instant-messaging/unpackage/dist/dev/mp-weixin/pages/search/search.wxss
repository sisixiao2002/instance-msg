.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 25px;
}
.top-bar {
  width: 750rpx;
  height: 88rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 1rpx 0rpx 0rpx rgba(0, 1, 0, 0.11);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding-top: 25px;
}
.top-bar .search-box {
  width: 600rpx;
  height: 60rpx;
  background: #F3F4F6;
  border-radius: 10rpx;
  margin-left: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.top-bar .search-box .search-input {
  margin-left: 30rpx;
  width: 500rpx;
}
.top-bar .search-box .search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}
.top-bar .cancle {
  width: 56rpx;
  height: 40rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #272832;
  font-weight: 400;
  margin-right: 32rpx;
}
.main {
  width: 686rpx;
  margin: 0 auto;
}
.main .search-user .title {
  width: 86rpx;
  height: 60rpx;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #272832;
  font-weight: 600;
  margin-top: 34rpx;
  margin-bottom: 20rpx;
}
.main .search-user .list {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* border: 1px solid green; */
  margin-bottom: 40rpx;
}
.main .search-user .list .user-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.main .search-user .list .user-box .usericon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.main .search-user .list .user-box .names {
  margin-left: 32rpx;
}
.main .search-user .list .user-box .names .user-name {
  height: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #272832;
  line-height: 50rpx;
  font-weight: 400;
}
.main .search-user .list .user-box .names .email {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #272832;
  width: 400rpx;
  margin-top: 15rpx;
}
.main .search-user .list .send {
  width: 120rpx;
  height: 48rpx;
  border-radius: 24rpx;
  font-family: PingFangSC-Regular;
  text-align: center;
  font-size: 24rpx;
  line-height: 48rpx;
  font-weight: 400;
}
.main .search-user .list .msg {
  background: #FFE431;
  color: #272832;
}
.main .search-user .list .addfriend {
  background: rgba(74, 170, 255, 0.1);
  color: #4AAAFF;
}
.main .search-group .title {
  width: 86rpx;
  height: 60rpx;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #272832;
  font-weight: 600;
  margin-top: 34rpx;
  margin-bottom: 20rpx;
}
.main .search-group .list {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.main .search-group .list .group-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.main .search-group .list .group-box .groupicon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.main .search-group .list .group-box .group-name {
  height: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #272832;
  line-height: 50rpx;
  font-weight: 400;
  margin-left: 32rpx;
}
.main .search-group .list .sendmsg {
  width: 120rpx;
  height: 48rpx;
  background: #FFE431;
  border-radius: 24rpx;
  font-family: PingFangSC-Regular;
  text-align: center;
  font-size: 24rpx;
  line-height: 48rpx;
  color: #272832;
  font-weight: 400;
}

